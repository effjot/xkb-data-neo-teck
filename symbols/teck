// Options for the Truly Ergonomic Computer Keyboard (TECK)
// Created by Florian Jenn <devel@effjot.net>

// Map Tab to the left space bar.  These definitions have been copied from the NEO layout in file 'de'.
partial alphanumeric_keys
xkb_symbols "leftspace_tab" {
    key.type[Group1] = "EIGHT_LEVEL";
    // for original firmware
    key  <JPCM> { [ Tab,                     ISO_Left_Tab,            Multi_key,               ISO_Level5_Lock,         NoSymbol,                NoSymbol,                NoSymbol,                ISO_Level5_Lock          ] };
    // for upgraded firmware
    key  <MENU> { [ Tab,                     ISO_Left_Tab,            Multi_key,               ISO_Level5_Lock,         NoSymbol,                NoSymbol,                NoSymbol,                ISO_Level5_Lock          ] };
};